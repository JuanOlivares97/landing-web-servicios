 <!-- JavaScript para manejar el formulario -->
 <script>
 document.addEventListener('DOMContentLoaded', function() {
     const form = document.querySelector('form[action="/contact"]');
     const submitButton = form.querySelector('button[type="submit"]');
     const originalButtonText = submitButton.innerHTML;
     const clientTypeSelect = document.getElementById('client-type');
     const companyField = document.getElementById('company-field');
     const companyInput = document.getElementById('company');
     
     // Manejar cambio en tipo de cliente
     clientTypeSelect.addEventListener('change', function() {
         if (this.value === 'empresa') {
             companyField.classList.remove('hidden');
             companyInput.required = true;
         } else {
             companyField.classList.add('hidden');
             companyInput.required = false;
             companyInput.value = ''; // Limpiar el campo cuando se oculta
         }
     });
     
     // Función para mostrar mensajes
     function showMessage(message, isSuccess = true) {
         // Remover mensaje anterior si existe
         const existingMessage = form.querySelector('.form-message');
         if (existingMessage) {
             existingMessage.remove();
         }
         
         // Crear nuevo mensaje
         const messageDiv = document.createElement('div');
         messageDiv.className = `form-message p-4 rounded-xl mb-4 ${isSuccess ? 'bg-green-100 border border-green-300 text-green-800' : 'bg-red-100 border border-red-300 text-red-800'}`;
         messageDiv.innerHTML = `
             <div class="flex items-center">
                 <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                     ${isSuccess ? 
                         '<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>' :
                         '<path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>'
                     }
                 </svg>
                 <span>${message}</span>
             </div>
         `;
         
         // Insertar mensaje al inicio del formulario
         form.insertBefore(messageDiv, form.firstChild);
         
         // Scroll al mensaje
         messageDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
         
         // Auto-remover mensaje de éxito después de 5 segundos
         if (isSuccess) {
             setTimeout(() => {
                 if (messageDiv.parentNode) {
                     messageDiv.remove();
                 }
             }, 5000);
         }
     }
     
     // Función para validar email
     function isValidEmail(email) {
         const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
         return emailRegex.test(email);
     }
     
     // Manejar envío del formulario
     form.addEventListener('submit', async function(e) {
         e.preventDefault();
         
         // Obtener datos del formulario
         const formData = new FormData(form);
         const data = Object.fromEntries(formData);
         
         // Validación del lado del cliente
         if (!data.clientType) {
             showMessage('Por favor selecciona el tipo de cliente.', false);
             return;
         }
         
         if (!data.name.trim()) {
             showMessage('Por favor ingresa tu nombre completo.', false);
             return;
         }
         
         if (!data.email.trim()) {
             showMessage('Por favor ingresa tu correo electrónico.', false);
             return;
         }
         
         if (!isValidEmail(data.email)) {
             showMessage('Por favor ingresa un correo electrónico válido.', false);
             return;
         }
         
         // Validar campo de empresa si es requerido
         if (data.clientType === 'empresa' && !data.company.trim()) {
             showMessage('Por favor ingresa el nombre de la empresa.', false);
             return;
         }
         
         if (!data.message.trim()) {
             showMessage('Por favor escribe un mensaje.', false);
             return;
         }
         
         // Cambiar estado del botón
         submitButton.disabled = true;
         submitButton.innerHTML = `
             <svg class="animate-spin w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24">
                 <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                 <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
             </svg>
             Enviando...
         `;
         
         try {
             // Enviar datos al servidor
             const response = await fetch('/contact', {
                 method: 'POST',
                 headers: {
                     'Content-Type': 'application/json',
                 },
                 body: JSON.stringify(data)
             });
             
             const result = await response.json();
             
             if (result.success) {
                 showMessage(result.message, true);
                 form.reset(); // Limpiar formulario
             } else {
                 showMessage(result.message, false);
             }
             
         } catch (error) {
             console.error('Error:', error);
             showMessage('Ocurrió un error al enviar el formulario. Por favor intenta nuevamente.', false);
         } finally {
             // Restaurar botón
             submitButton.disabled = false;
             submitButton.innerHTML = originalButtonText;
         }
     });
 });
 </script>