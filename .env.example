# Configuración de Entorno para Producción

# Puerto del servidor (cPanel asigna automáticamente)
PORT=3000

# Entorno de ejecución
NODE_ENV=production

# Configuración SMTP para correos corporativos (cPanel)
SMTP_HOST=mail.tu-dominio.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=contacto@tu-dominio.com
SMTP_PASS=tu-contraseña-email

# Configuración de correos
EMAIL_FROM=contacto@tu-dominio.com
EMAIL_TO=info@tu-dominio.com
EMAIL_REPLY_TO=no-reply@tu-dominio.com

